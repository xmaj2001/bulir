generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  nif       String   @unique
  password  String
  role      String   @default("client")
  balance   Float    @default(0)
  status    String   @default("pending")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  providedServices Service[] @relation("ServiceProvider")
  assignedServices Service[] @relation("ServiceUser")

  clientReservations   Reservation[] @relation("ReservationClient")
  providerReservations Reservation[] @relation("ReservationProvider")

  otps Otp[]
}

model Service {
  id          String   @id @default(uuid())
  name        String
  description String
  price       Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  providerId String
  provider   User   @relation("ServiceProvider", fields: [providerId], references: [id])

  userId String?
  user   User?   @relation("ServiceUser", fields: [userId], references: [id])

  reservations Reservation[]
}

model Reservation {
  id         String   @id @default(uuid())
  serviceId  String
  clientId   String
  providerId String
  price      Float
  status     String   @default("PENDING")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  client   User    @relation("ReservationClient", fields: [clientId], references: [id])
  provider User    @relation("ReservationProvider", fields: [providerId], references: [id])
  service  Service @relation(fields: [serviceId], references: [id])
}

model Otp {
  id        String   @id @default(uuid())
  code      String
  userId    String
  purpose   String
  used      Boolean  @default(false)
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}
